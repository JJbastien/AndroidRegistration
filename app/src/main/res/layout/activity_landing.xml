<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Landing">

    <TextView
        android:id="@+id/landing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="19dp"
        android:textColor="@color/white"
        android:layout_marginBottom="349dp"
        android:text="@string/welcome_your_email_has_been_saved"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLanding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLanding"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_marginBottom="67dp"
        android:text="@string/click_to_go_back_and_register_another_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landing" />
</androidx.constraintlayout.widget.ConstraintLayout>